@model AdminLogin

@{
    ViewData["Title"] = "Admin Login";
}

<h1>Login</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminLogin">
            <div asp-validation-summary="ModelOnly" class="red  lighten-3"></div>
            <div class="form-group">
                <label class="control-label">User Name</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="red  lighten-3"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="red  lighten-3"></span>
            </div>
            <input type="hidden" asp-for="RedirectUrl" />
            <div class="form-group">
                <input type="submit" value="Log In" class="waves-effect btn cyan lighten-3 " />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
